generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model SentMessages {
  id      String   @id @default(uuid())
  number  String   @unique
  name    String
  message String   @db.Text
  sentAt  DateTime @default(now())

  @@map("sent_messages")
}

model VulnerablePeople {
  id                      String @id @default(uuid())
  number                  String @unique
  name                    String
  ageGroup                Int
  gender                  String
  location                String
  childTraffickingScore   Float
  domesticServitudeScore  Float
  drugsCoercionScore      Float
  forcedLaborScore        Float
  fraudDeceptionScore     Float
  organTraffickingScore   Float
  sexualExploitationScore Float
  totalVulnerabilityScore Float
  vulnerabilityLevel      String
  vulnerabilityType       String

  createdAt DateTime @default(now())

  @@map("vulnerable_people")
}
